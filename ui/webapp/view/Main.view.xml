 <mvc:View controllerName="com.emmi.letsmove.controller.Main"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl" >
    <Page id="page" showHeader="false" class="transparent-bg">
		<FlexBox id="flexBoxContent" alignItems="Center" justifyContent="Center" class="sapUiSmallMargin">
			<Panel id="formPanel" class="panel">
				<FlexBox id="flexBoxLogo" alignItems="Center" justifyContent="Center">
					<Image id="imgLogo" src="resources/img/emmi_logo.png" width="250px" class="sapUiMediumMarginTopBottom" press="reload"/>
				</FlexBox>
				<FlexBox id="flexBoxStatus" alignItems="Center" justifyContent="Center">
					<VBox id="vBoxStatus">
						<items>
							<HBox id="hBoxStats">
								<items>
									<VBox id="vBoxStatus2" class="sapUiSmallMarginEnd">
										<items>
											<MessageStrip id="messageStrip" class="sapUiSmallMarginTopBottom" visible="false"/>
										</items>
									</VBox>
								</items>
							</HBox>
						</items>
					</VBox>
				</FlexBox>
				<VBox id="vBoxForm">
					<items>
						<HBox id="hBoxName">
							<items>
								<VBox id="vBoxFirstName" class="sapUiSmallMarginEnd">
									<items>
										<Label text="Vorname" id="labelFirstName" labelFor="inputFirstName" width="100%" />
										<Input id="inputFirstName" required="true" type="Text" liveChange="validate" valueStateText="Geben Sie ihren Vornamen ein"
										value="{ path: 'validation>/firstname', type: 'sap.ui.model.type.String', constraints: { maxLength: 50 }}"
										valueLiveUpdate="true"/>
									</items>
								</VBox>
								<VBox id="vBoxLastName">
									<items>
										<Label text="Nachname" id="labelLastName" labelFor="inputLastName" width="100%"/>
										<Input id="inputLastName" type="Text" required="true" liveChange="validate" valueStateText="Geben Sie ihren Nachnamen ein"
										value="{ path: 'validation>/lastname', type: 'sap.ui.model.type.String', constraints: { maxLength: 50 }}"
										valueLiveUpdate="true" />
									</items>
								</VBox>
							</items>
						</HBox>
						<HBox id="hBoxBirthYear">
							<items>
								<VBox width="50%" id="vBoxBirthYear" class="sapUiSmallMarginEnd">
									<items>
										<Label id="labelBirthYear" text="Jahrgang" width="100%" labelFor="inputStreet"/>
										<Input id="inputBirthYear" type="Number" liveChange="validate" required="true" valueStateText="Bitte Jahrgang eingeben"
										value="{ path: 'validation>/birthyear', type: 'sap.ui.model.type.Integer', constraints: { minimum: 1900, maximum: 2020 } }"
										valueLiveUpdate="false"/>
									</items>
								</VBox>
								<VBox width="50%" id="vBoxStreet">
									<items>
										<Label id="labelStreet" text="Strasse" width="100%" labelFor="inputStreet"/>
										<Input id="inputStreet" type="Text" liveChange="validate" required="true" valueStateText="Bitte Strasse eingeben"
										value="{ path: 'validation>/street', type: 'sap.ui.model.type.String', constraints: { maxLength: 50 }}"
										valueLiveUpdate="true"/>
									</items>
								</VBox>
							</items>
						</HBox>
						<HBox width="100%" id="hBoxAdress">
							<items>
								<VBox width="100%" id="vBoxPLZ" class="sapUiSmallMarginEnd">
									<items>
										<Label id="labelPLZ" text="PLZ" labelFor="inputPLZ" width="100%"/>
										<!-- Limit PLZ Range from 1000 - 9658 -->
										<Input id="inputPLZ" type="Number" liveChange="validate" required="true" valueStateText="Die Postleitzahl ist ungültig"
										value="{
											type : 'sap.ui.model.type.String',
											path: 'validation>/plz',
											constraints : {
							                    search: '^([1-8][0-9]{3}|9[0-5][0-9]{2}|96[0-4][0-9]|965[0-8]){0,4}$'
							            	}
						            	}"
										valueLiveUpdate="true"/>
									</items>
								</VBox>
								<VBox id="vBoxCity" width="100%">
									<items>
										<Label id="labelCity" text="Ort" labelFor="inputCity" width="100%"/>
										<Input id="inputCity" type="Text" liveChange="validate" required="true" valueStateText="Bitte Ort eingeben"
										value="{ path: 'validation>/city', type: 'sap.ui.model.type.String', constraints: { maxLength: 50 }}"
										valueLiveUpdate="true"/>
									</items>
								</VBox>
							</items>
						</HBox>
						<HBox id="hBoxEmail" width="100%">
							<items>
								<VBox id="vBoxEmail" width="100%">
									<items>
										<Label id="labelEmail" text="E-Mail Adresse" width="100px"/>
										<Input id="inputEmail" type="Email" liveChange="validate" required="true" valueStateText="E-Mail Adresse ungültig"
										value="{
											type : 'sap.ui.model.type.String',
											path: 'validation>/email',
											constraints : {
							                    search: '([a-zA-Z0-9_\\-\\.]+)@[a-zA-Z]+\\.[a-z]{2,6}|^\\s*$'
							            	}
						            	}"
						            	valueLiveUpdate="true" />
									</items>
								</VBox>
							</items>
						</HBox>
						<HBox id="hBoxSend" justifyContent="Center">
							<items>
								<Button id="btnSend" text="Senden" enabled="false" press="register"/>
							</items>
						</HBox>
					</items>
				</VBox>
			</Panel>
		</FlexBox>
	</Page>
  </App>
</mvc:View>
