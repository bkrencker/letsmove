{
  "name": "letsmove",
  "version": "0.0.1",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^4",
    "express": "^4",
    "@sap/hana-client": "^2.4.177",
    "helmet": "^4.3.1"
  },
  "devDependencies": {
    "sqlite3": "^4.1.0",
    "shx": "^0.3.3",
    "@ui5/cli": "^2.7.1",
    "ui5-middleware-livereload": "^0.5.1",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-ui5": "^2.3.2",
    "npm-run-all": "^4.1.5",
    "eslint": "^7.15.0",
    "ui5-middleware-cfdestination": "^0.3.0",
    "ui5-task-zipper": "^0.4.0",
    "cross-var": "^1.1.0",
    "mbt": "^1.0.17"
  },
  "scripts": {
    "start": "npx cds run",
    "start_ui5": "ui5 serve --config=ui/ui5.yaml  --open index.html",
    "build:ui": "run-s  build:uimodule",
    "lint": "eslint .",
    "build:mta": "mbt build",
    "deploy:cf": "cross-var cf deploy mta_archives/ui5_$npm_package_version.mtar",
    "deploy": "run-s build:mta deploy:cf",
    "serve:uimodule": "ui5 serve --config=ui/ui5.yaml",
    "build:uimodule": "ui5 build --config=ui/ui5.yaml --clean-dest --dest ui/dist --include-task=generateManifestBundle"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      }
    }
  },
  "ui5": {
    "dependencies": [
      "ui5-middleware-livereload",
      "ui5-middleware-cfdestination",
      "ui5-task-zipper"
    ]
  }
}
